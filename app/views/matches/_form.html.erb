<%= form_for @match, :url => {:action => "update"} do |form| %>
	<div class="form-group">
		<%= form.select(:status, [ 'Not Started', 'In Progress', 'Completed'],  {}, {class: 'form-control'}) %>
	</div>

	<div class="form-group">
		<%= form.text_field :winner, placeholder: 'Winner', class: 'form-control' %>
	</div>

	<div class="actions">
		<%= form.submit %>
	</div>
<% end %>