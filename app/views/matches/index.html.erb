<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Status</th>
			<th>Winner</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @matches.each_with_index do |mat,i| %>
			<tr>
				<td><%= i+1 %></td>
				<td><%= mat.name %></td>
				<td><%= mat.status %></td>
				<td><%= mat.winner %></td>
				<td><%= link_to 'Edit', edit_tournament_match_path(params[:tournament_id], mat.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to '<button class="btn btn-primary">Teams</button>'.html_safe, tournament_teams_path(params[:tournament_id]), class: 'button-new' %>