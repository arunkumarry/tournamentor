<%= form_for @team, :url => {:action => "update"} do |form| %>
	<div class="form-group">
		<%= form.text_field :for_runs, placeholder: 'For Runs', class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= form.text_field :against_runs, placeholder: 'Against Runs', class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= form.text_field :for_overs, placeholder: 'For Overs', class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= form.text_field :against_overs, placeholder: 'Against Overs', class: 'form-control' %>
	</div>

	<div class="actions">
		<%= form.submit %>
	</div>
<% end %>