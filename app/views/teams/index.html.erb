<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Total Played</th>
			<th>Won</th>
			<th>Lost</th>
			<th>For Runs</th>
			<th>Against Runs</th>
			<th>For Overs</th>
			<th>Against Overs</th>
			<th>NRR</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @teams.each_with_index do |team,i| %>
			<tr>
				<td><%= i+1 %></td>
				<td><%= team.name %></td>
				<td><%= team.total_played %></td>
				<td><%= team.won %></td>
				<td><%= team.lost %></td>
				<td><%= team.for_runs %></td>
				<td><%= team.against_runs %></td>
				<td><%= team.for_overs %></td>
				<td><%= team.against_overs %></td>
				<td><%= (team.for_runs/team.for_overs - team.against_runs/team.against_overs).round(3) rescue nil %></td>
				<td><%= link_to 'Edit', edit_tournament_team_path(params[:tournament_id], team.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>