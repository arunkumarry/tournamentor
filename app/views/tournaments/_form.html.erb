<%= form_with(model: tournament, local: true) do |form| %>
	<div class="form-group">
		<%= form.text_field :name, placeholder: 'Name', class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= form.text_field :team_names, placeholder: 'Team Names', class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= form.text_field :number_of_matches, placeholder: 'Number of Matches', class: 'form-control' %>
	</div>

	<div class="actions">
		<%= form.submit 'Create Tournament', class: 'btn btn-success' %>
	</div>
<% end %>