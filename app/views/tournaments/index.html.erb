<h1 style="text-align: center; color: darkslateblue;">Tournamentor</h1>

<br><br>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Status</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @tournaments.each do |tournament| %>
			<tr>
				<td><%= tournament.name %></td>
				<td><%= tournament.status %></td>
				<td><%= link_to 'Show', tournament %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<button class="btn btn-primary" style="float: right;"><%= link_to 'New Tournament', new_tournament_path, class: 'button-new' %></button>